[
  // NAVIGATION
  {
    "key": "ctrl-h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl-l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl-k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl-j",
    "command": "workbench.action.navigateDown"
  },
  // SIDEBAR
  {
    "key": "ctrl-b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // SCM (Git)
  {
    "key": "space g g",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.view.scm"
      ]
    },
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && !sideBarFocus"
  },
  {
    "key": "space g g",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    "when": "sideBarFocus && !inputFocus"
  },
  {
    "key": "space g g",
    "when": "vim.mode == 'Normal' && editorTextFocus && activeViewlet == 'workbench.view.scm'",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  // TERMINAL
  {
    "key": "ctrl-t",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl-n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl-x",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl-s",
    "command": "workbench.action.terminal.split" // split terminal
  },
  {
    "key": "tab",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "shift-tab",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // DEBUGGING
  {
    "key": "space d b",
    "command": "editor.debug.action.toggleBreakpoint",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space d c",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.view.debug",
        "workbench.action.debug.start",
        "workbench.debug.action.focusRepl"
      ]
    },
    "when": "vim.mode == 'Normal' && editorTextFocus && !inDebugMode"
  },
  {
    "key": "space d c",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.view.debug",
        "workbench.action.debug.continue",
        "workbench.debug.action.focusRepl"
      ]
    },
    "when": "vim.mode != 'Insert' && inDebugMode"
  },
  {
    "key": "space d q",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.debug.stop",
        "workbench.action.closePanel",
        "workbench.action.closeSidebar"
      ]
    },
    "when": "vim.mode != 'Insert' && inDebugMode"
  },
  // DIAGNOSTICS
  {
    "key": "[ x",
    "command": "editor.action.marker.prev",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "] x",
    "command": "editor.action.marker.next",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space x l", // [D]iagnostics [L]ist
    "command": "workbench.action.problems.focus",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  // SEARCH
  {
    "key": "space f f",
    "command": "workbench.action.quickOpen",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space f s",
    "command": "workbench.action.findInFiles",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space f r",
    "command": "workbench.action.replaceInFiles",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  // LSP
  {
    "key": "shift-k",
    "command": "editor.action.moveLinesUpAction",
    "when": "vim.mode == 'VisualLine' && editorTextFocus"
  },
  {
    "key": "space c a", // [C]ode [A]ction
    "command": "editor.action.codeAction",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space r n", // [R]e[n]ame
    "command": "editor.action.rename",
    "when": "vim.mode == 'Normal' && editorHasRenameProvider && editorTextFocus && !editorReadonly"
  },
  {
    "key": "space g s", // [G]o to [S]ymbol
    "command": "workbench.action.gotoSymbol",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space g d", // [G]o to [D]efinition
    "command": "editor.action.revealDefinition",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space g r", // [G]o to [R]eferences
    "command": "editor.action.goToReferences",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space g i", // [G]o to [I]mplementation
    "command": "editor.action.goToImplementation",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space g t", // [G]o to [T]ype Definition
    "command": "editor.action.goToTypeDefinition",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  // SPLITS
  {
    "key": "space s h",
    "command": "workbench.action.splitEditorDown",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space s v",
    "command": "workbench.action.splitEditorRight",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space s x",
    "command": "workbench.action.closeGroup",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  // FILETREE
  {
    "key": "space e e",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.files.action.focusFilesExplorer"
      ]
    },
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus) && !sideBarFocus"
  },
  {
    "key": "space e e",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.toggleSidebarVisibility",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    "when": "sideBarFocus && !inputFocus"
  },
  {
    "key": "space e e",
    "when": "vim.mode == 'Normal' && editorTextFocus && foldersViewVisible",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "c",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "shift-a",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "s",
    "command": "explorer.openToSide",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // TABS
  {
    "key": "tab",
    "command": "workbench.action.nextEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "shift-tab",
    "command": "workbench.action.previousEditorInGroup",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space t x",
    "command": "workbench.action.closeActiveEditor",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space x",
    "command": "workbench.action.closeOtherEditors",
    "when": "(vim.mode == 'Normal' || vim.mode == 'Visual') && (editorTextFocus || !inputFocus)"
  },
  // HARPOON
  {
    "key": "space h a",
    "command": "vscode-harpoon.addEditor",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space h h",
    "command": "vscode-harpoon.editorQuickPick",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space h 1",
    "command": "vscode-harpoon.gotoEditor1",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space h 2",
    "command": "vscode-harpoon.gotoEditor2",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space h 3",
    "command": "vscode-harpoon.gotoEditor3",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space h 4",
    "command": "vscode-harpoon.gotoEditor4",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space h 5",
    "command": "vscode-harpoon.gotoEditor5",
    "when": "vim.mode == 'Normal' && (editorTextFocus || !inputFocus)"
  },
  // CODE MANIPULATION
  {
    "key": "space f m t",
    "command": "editor.action.formatDocument",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "space o i",
    "command": "editor.action.organizeImports",
    "when": "vim.mode == 'Normal' && editorTextFocus"
  },
  {
    "key": "tab",
    "command": "editor.action.indentLines",
    "when": "vim.mode == 'VisualLine' && editorTextFocus"
  },
  {
    "key": "shift+tab",
    "command": "editor.action.outdentLines",
    "when": "vim.mode == 'VisualLine' && editorTextFocus"
  },
  {
    "key": "shift+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "(vim.mode == 'Normal' || vim.mode == 'VisualLine') && editorTextFocus"
  },
  {
    "key": "shift-j",
    "command": "editor.action.moveLinesDownAction",
    "when": "(vim.mode == 'Normal' || vim.mode == 'VisualLine') && editorTextFocus"
  },
  {
    "key": "ctrl+/",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  // Copilot
  {
    "key": "ctrl-g",
    "command": "workbench.action.chat.open",
    "when": "vim.mode == 'Normal' && !chatIsVisible"
  },
  {
    "key": "space g i",
    "command": "inlineChat.start",
    "when": "vim.mode == 'Normal' && editorTextFocus && !inlineChatVisible"
  }
]
